#!/bin/bash

set -e

#
# Run entropy daemon
CID_HAVEGED=`docker run --rm --privileged -d harbur/haveged`

#
# Bootstrap archlinux-base
docker build -t archlinux-base images/archlinux-base/
docker run --rm --entrypoint cat archlinux-base /usr/src/build/sysroot.tar | \
        docker import - cherrypick/archlinux-base

#
# Stop entropy daemon
docker stop "$CID_HAVEGED"
